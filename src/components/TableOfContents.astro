---
import { getEntry } from 'astro:content';
const { params } = Astro;
const currentSlug = params.slug;
console.log(`${currentSlug}`);
const entry = await getEntry('blog', currentSlug);
const { headings } = await entry.render();

---

<div class="sm:hidden md:hidden lg:hidden xl:flex flex-col gap-2 mt-10 max-w-48 ">
  {headings.map((heading) => (
    <a class="opacity-55 text-xs hover:opacity-100" href={`#${heading.slug}`}> 
      {heading.text}
    </a>
  ))}
</div>
