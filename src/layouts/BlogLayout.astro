---
import Footer from "../components/Footer.astro";
import BackButton from "../components/BackButton.astro";
import ArticleSidebar from "../components/ArticleSidebar.astro";
import ShareButton from "../components/ShareButton.astro";

const { frontmatter } = Astro.props;
---

<html lang="es">
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Article</title>
    <body class="bg-neutral-900 text-white">
        <div class="bg-gradient-to-t from-transparent to-neutral-900 p-4 h-28 w-full fixed top-0 z-10"></div>
        <main class="flex relative mx-auto overflow-hidden pt-32 pb-72 max-w-2xl min-h-screen">
            <div style="transform: translate(-280px, 121px);" class="fixed top-0 px-10">
                <BackButton/> 
                <ArticleSidebar/> 
            </div>
            <div class="h-full w-full">
                <div class="flex justify-between">
                    <div>
                        <div class="mb-2 font-bold">{frontmatter.title}</div>
                        <div class="mb-10 font-extralight text-sm opacity-80">{frontmatter.date}</div>
                    </div>
                    <ShareButton/> 
                </div>
                <img src={frontmatter.image} alt="" class="rounded-lg shadow-lg mb-6">
                <main class="prose">
                    <slot />  
                </main> 
            </div>
        </main>
    </body>	
    <Footer/>
</html>


<style is:global>
    .prose p + p{
        margin-bottom: 15px;
        color: white;

    }
    .prose h1 {
        color: grey;
    }

    .prose h2 {
        color: grey;
    }
    
    .prose h3 {
        color: grey;
    }
    .prose h4 {
        color: grey;
    }
    .prose h5 {
        color: grey;
    }

    .prose p {
        color: white;
    }
    .prose strong {
        color: white;
    }

    .prose ol {
        color: white;
    }

    .prose ul {
        color: white;
    }


    .prose a {
        color: white;
    }

    .prose img {
        border-radius: 0.5rem;
    }

    .prose code {
        color: grey;
    }

    .prose pre {
        color: grey;
    }

</style>