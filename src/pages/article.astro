---
import Footer from '../components/Footer.astro';
import ShareButton from '../components/ShareButton.astro';
import BackButton from '../components/BackButton.astro';
import ExampleP from '../components/ExampleP.astro';
import ArticleSidebar from '../components/ArticleSidebar.astro';
---

<!doctype html>
<html class="scroll-smooth" lang="en">
    <body class="bg-neutral-900 text-white">
        <div class="bg-gradient-to-t from-transparent to-neutral-900 p-4 h-28 w-full fixed top-0 z-10"></div>
        <main class="flex relative mx-auto overflow-hidden pt-32 pb-72 max-w-2xl min-h-screen">
            <div style="transform: translate(-280px, 121px);" class="fixed top-0 px-10">
                <BackButton/> 
                <ArticleSidebar/> 
            </div>
            <div class="h-full w-full">
                <div class="flex justify-between">
                    <div>
                        <div class="mb-2 font-bold">Article 1</div>
                        <div class="mb-10 font-extralight text-sm opacity-80">December 2023</div>
                    </div>
                    <ShareButton/> 
                </div>
                <img src="https://images.unsplash.com/photo-1682685797366-715d29e33f9d?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="" class="rounded-lg shadow-lg mb-6">
               
                <ExampleP/>
                <ExampleP/>     
                <ExampleP/> 
                <div id="LastP">
                <ExampleP/>  
                </div>
            </div>
        </main>
    </body>
    <Footer/>
</html>

